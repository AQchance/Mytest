package 第五次上机作业;
import java.util.Scanner;
class Molecule{
	public String name;
	public double C=12.010;
	public double H=1.008;
	public double N=14.010;
	public double O=16.000;
	public Molecule(String name) {
		this.name=name;
	}
	public void setName(String name) {
		this.name=name;
	}
	double molecularweight=0.0;
	void getWeight() {
		int sum=0;
		char element='0';
		for(int i=0;i<this.name.length();i++) {
			char ch=this.name.charAt(i);
			if(ch>='0'&&ch<='9') {
				sum*=10;
				sum+=ch-'0';
				if(this.name.charAt(i+1)>'9'||this.name.charAt(i+1)<'0') {
					switch(ch) {
					case 'C':molecularweight+=C*sum;break;
					case 'H':molecularweight+=H*sum;break;
					case 'O':molecularweight+=O*sum;break;
					case 'N':molecularweight+=N*sum;break;
					default:break;
					}
					sum=0;
				}
			}
			else {
				element=ch;
				if(this.name.charAt(i+1)>'9'||this.name.charAt(i+1)<'0') {
					switch(element) {
					case 'C':molecularweight+=C;break;
					case 'H':molecularweight+=H;break;
					case 'O':molecularweight+=O;break;
					case 'N':molecularweight+=N;break;
					default:break;
					}
				}
			}
		}
		System.out.println("该分子式的分子量为"+molecularweight);
	}
}
public class Test1 {
	public static void main(String args[]) {
		Scanner in=new Scanner(System.in);
		System.out.println("请输入分子式个数：");
		int num=in.nextInt();
		Molecule[] mo=new Molecule[num];
		for(int i=0;i<num;i++) {
			String name=in.nextLine();
			mo[i]=new Molecule(name);
			mo[i].setName(name);
		}
		for(int i=0;i<num;i++) {
			mo[i].getWeight();
		}
	}
}
